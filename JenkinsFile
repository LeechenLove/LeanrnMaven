pipeline {
    agent any
    options {
        retry(3)
    }
    tools {
            // Install the Maven version configured as "M3" and add it to the path.
            maven "maven3.8.6"
            jdk "jdk1.8"
        }
    triggers{cron('00 23 * * *')}
    stages {
        stage('checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: '3333', url: 'https://github.com/LeechenLove/ApiAutomation.git']]])
            }
        }
        stage('mvn package') {
            steps {
                bat 'mvn -Dmaven.test.failure.ignore=true clean package'
            }

            post {
               always {
                  success {
                             archiveArtifacts 'target/*.jar'
                  }
               }
            }
        }
        stage('mvn run') {
            bat 'cd target && java -jar simple-maven-project-with-tests-1.0-SNAPSHOT.jar'
        }
    }
}